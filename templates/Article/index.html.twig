{% extends 'base.html.twig' %}

{% block title %}Hello ArticleController!{% endblock %}

{% block body %}
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <style>
        .m{
            margin-top: 64px;
            margin-bottom: 200px;
        }
        .table-hover tbody tr:hover td, .table-hover tbody tr:hover th {
            background-color: #152f4f;
            color: lightskyblue;
        }
        .table table-striped{
            border-radius: 10px!important;
        }
        .tooltip-inner {
            width:400px;
            max-width: 400px;
            background-color: #152f4f;
            color: #fff;
            text-align: justify;
            border-radius: 10px;
            padding: 10px;
            opacity: 1;
        }
    </style>

    {###########################################################################}
    {########################      Perfect Block      ##########################}
    {###########################################################################}
    <div class="container-fluid m">
        <div class="title">
{#            <h1>Liste des Article </h1>#}
            <h3 class="p-1 ml-3 mr-3 mt-3 mb-5 rounded-circle text-center font-weight-bold" style="background-color: #152f4f;color: white">Liste des Article</h3>

        </div>
        <table class="table table-striped table-hover" style="border-radius:10px!important;">
            <thead>
            <tr class="text-light" style="background-color: #152f4f;">
                <th><label for="titre">Le Titre</label></th>
                <th><label for="size">La Abstract</label></th>
                <th><label for="resume">La Keyword</label></th>
                <th class="text-center"><label for="content">Le Contenue</label></th>
                <th><label for="content">Auteur</label></th>
                <th><label for="Category">Category</label></th>
                <th><label for="Revue">Revue</label></th>
                <th><label for="File">File</label></th>
                <th class="text-center"><label for="Actions">Actions</label></th>
            </tr>
            </thead>
            <tbody>
            {% for article in articles %}
                <tr>
                    <td>{{ article.title }}</td>
                    <td > {{ article.abstract }}</td>
                    <td>{{ (article.keyword) }}</td>
                    <td style="width: 350px;">{{ (article.content)}}</td>
                    <td>
                        {{ (article.user.username) }}
                    </td>
                    <td>
                        {% for category in categories  %}
                            {% if (category.id) is same as (article.categorie.id) %}
                                {{ category.nomCategorie }}
                            {% endif %}
                        {% endfor %}
                    </td>
                    <td>
                        {% for revue in revues %}
                            {% if (revue.id) is same as (article.revue.id) %}
                                {{ revue.nomRevue }}
                            {% endif %}
                        {% endfor %}
                    </td>
                    <td>
                        <a href="{{ asset('uploads/'~ article.file) }}">
                            {# <i class="material-icons">&#xE415;</i>#}  {# use material-icons #}
                            <i class="fa fa-file-pdf-o" style="font-size:38px;color:red"></i>  {# use font-awesome icons #}
                        </a>
                    </td>
                    <td>
                        <div class="row d-flex justify-content-center">
                            <div class="col-md-2 ml-0 align-items-center ">
{#                                <a href="" class="btn btn-outline-primary">&nbspEdit&nbsp&nbsp </a>#}
                                <a href="{{ path('article-edit',{id:article.id}) }}"  class="btn btn-outline-primary">&nbsp&nbspEdit&nbsp&nbsp</a>
                            </div>
                            <div class="col-md-2 ml-2 align-items-center">
{#                                <a href="" class="btn btn-outline-danger">Delete</a>#}
                                <a href="{{ path('article-delete',{'id':article.id}) }}" class="btn btn-outline-danger" onclick="return confirm('are u sure?')">Delete</a>

                            </div>
                            <div class="col-md-2 ml-2 align-items-center">
                                <a href="{{ path("article.show",{id:article.id}) }}" class="btn btn-outline-success">Show</a>
                            </div>
                        </div>

                    </td>

                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

