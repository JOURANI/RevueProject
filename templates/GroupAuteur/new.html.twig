{% extends 'base.html.twig' %}


{% block body %}

    <style>
        .mt{
            margin-top: 10px;
        }
    </style>
    <div class="container mt">
        <div class="title">
            <h1 class="text-center mb-5">Creer Un Nouveau Auteur</h1>
        </div>
        <div class="row d-flex justify-content-center">
            <div class="col-6 ">


                    {{ form_start(formgroupeAuteur, { 'attr': {'class': 'groupe_auteur'} }) }}
                    {{ form_widget(formgroupeAuteur) }}
                    {{ form_end(formgroupeAuteur) }}
                <button class="btn btn-primary" id="save"> Enregistrer</button>
            </div>
        </div>

    </div>

    {% block javascripts %}
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>
        <script type="text/javascript">
            $(document).ready(function () {
                $("#save").click(function () {
                    // $(".submit").submit();
                    //it takes more than 2 seconds, display notice
                    setTimeout(function() {
                        $(".groupe_auteur").submit();

                    }, 1000);
                });
            });
        </script>
    {% endblock %}

{% endblock %}


